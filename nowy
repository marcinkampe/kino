<script>
    function przenies() {
        location.href="balkon.html"
    }
    let film= new URL(location.href).searchParams.get('seans')

    let miejsca_p=document.getElementById("miejsca_p")
    let wynik=document.getElementById("wynik")

    for (let i = 1; i <= 5; i++) {
            miejsca_p.innerHTML+="<input type='checkbox' name='krzeslo' id='"+i+"_p'>"
    }
    function zaznaczone() {
        wynik.innerHTML=" "
        
        for (let i = 1; i <= 5; i++) {
            krzeslo=document.getElementById(i+'+_p')
            if (krzesko.checked) {
                wynik.innerHTML+=i+" "
            }
            else{
                wynik.innerHTML+="??????"
            }
        }
    }
</script>
